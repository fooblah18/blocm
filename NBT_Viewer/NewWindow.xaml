<Window
	xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
	xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
	xmlns:d="http://schemas.microsoft.com/expression/blend/2008" xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" mc:Ignorable="d"
	x:Class="NBT_Viewer.NewWindow"
	x:Name="Window"
	Title="Create tag"
	Width="350" Height="150" ResizeMode="NoResize" WindowStartupLocation="CenterOwner" Icon="add.png">

	<Grid x:Name="LayoutRoot">
		<Button Content="Create" HorizontalAlignment="Right" Margin="0,0,10,10" VerticalAlignment="Bottom" Width="65" Height="26"/>
		<Button Content="Discard" HorizontalAlignment="Right" Margin="0,0,80,10" VerticalAlignment="Bottom" Width="65" Height="26"/>
		<Label Content="Tag name:" HorizontalAlignment="Left" Margin="10,10,0,0" VerticalAlignment="Top"/>
		<Label Content="Tag type:" HorizontalAlignment="Left" Margin="10,45,0,0" VerticalAlignment="Top"/>
		<TextBox Margin="90,10,10,0" TextWrapping="Wrap" VerticalAlignment="Top" Height="25.96" VerticalContentAlignment="Center" Padding="0"/>
		<TextBox Margin="90,45,10,0" TextWrapping="Wrap" VerticalAlignment="Top" Height="25.96" VerticalContentAlignment="Center" Padding="0"/>
	</Grid>
</Window>