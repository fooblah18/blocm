<Window
	xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
	xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
	xmlns:d="http://schemas.microsoft.com/expression/blend/2008" xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" mc:Ignorable="d"
	x:Class="NBT_Viewer.InfoWindow"
	x:Name="Window"
	Title="About NBT visualizer"
	Width="350" Height="210" ResizeMode="NoResize" Icon="information.png" Background="#FF646464">

	<Grid x:Name="LayoutRoot">
		<TextBlock HorizontalAlignment="Center" Margin="0,30,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Foreground="White" FontSize="26.667"><Run Language="en-ph" Text="NBT visualizer"/></TextBlock>
		<TextBlock HorizontalAlignment="Center" Margin="0,75,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Foreground="White" FontSize="13.333"><Run Language="en-ph" Text="© 2011 Michael Ong"/></TextBlock>
		<StackPanel HorizontalAlignment="Center" Margin="0,0,0,10" VerticalAlignment="Bottom" Orientation="Horizontal">
			<Button Content="OK" HorizontalAlignment="Center" Width="50" Height="26" Margin="0,0,3,0"/>
			<Button Content="Check for updates" Width="120" Margin="3,0,0,0"/>
		</StackPanel>
	</Grid>
</Window>